{
  "manifest_version": 3,
  "name": "Citadel browser agent",
  "version": "1.2",
  "description": "Citadel is a browser agent that detects malware and shadow IT by analyzing and logging security events in a privacy-respecting way",
  "permissions": [
    "webNavigation",
    "webRequest",
    "downloads",
    "storage",
    "alarms",
    "nativeMessaging",
    "identity",
    "identity.email",
    "cookies",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/gui/images/*",
        "/utils/passwords.js",
        "/utils/injected/citadel-page-script.js"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "background": {
    "service_worker": "serviceworker.js",
    "scripts": [ "serviceworker.js" ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "utils/passwords.js",
        "utils/session-state.js",
        "utils/injected/injected-utils.js",
        "utils/injected/citadel-content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "16": "gui/images/icon16.png",
      "48": "gui/images/icon48.png",
      "128": "gui/images/icon128.png"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{090510dc-b0ac-44dd-8e44-fee9b778180d}",
      "strict_min_version": "128.0"
    }
  }

}
