{
  "manifest_version": 3,
  "name": "Citadel browser agent",
  "version": "1.4.1",
  "description": "The Citadel browser agent manages IT policy enforcement and detection of malware & shadow IT, by analyzing & logging security events",
  "permissions": [
    "webNavigation",
    "webRequest",
    "downloads",
    "storage",
    "alarms",
    "nativeMessaging",
    "identity",
    "identity.email",
    "cookies",
    "scripting",
    "tabs",
    "notifications",
    "management",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src * data:; style-src 'self'; img-src 'self' data: https://lh3.googleusercontent.com https://lh4.googleusercontent.com https://lh5.googleusercontent.com https://addons.mozilla.org https://store-images.s-microsoft.com https://addons-static.operacdn.com https://addons-media.operacdn.com"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/gui/images/*",
        "/gui/modal.js",
        "/gui/modal.css",
        "/gui/modal.html",
        "/utils/i18n/*.json",
        "/utils/injected/bundle/citadel-bundle-start.js",
        "/utils/injected/bundle/citadel-bundle-idle.js"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "background": {
    "service_worker": "serviceworker.js",
    "scripts": [
      "/utils/utils.js",
      "/config.js",
      "/utils/shim-node-to-browser.js",
      "/utils/definitions.js",
      "/utils/context.js",
      "/utils/bridge.js",
      "/utils/dashboard.js",
      "/utils/persistence.js",
      "/utils/debouncer.js",
      "/utils/encryption/bcrypt.js",
      "/utils/encryption/pbkdf2.js",
      "/utils/trust/password-vault.js",
      "/utils/trust/passwords.js",
      "/utils/trust/mfa.js",
      "/utils/eventaccumulator.js",
      "/utils/alarm.js",
      "/utils/unzipit.js",
      "/utils/schedule.js",
      "/utils/session-state.js",
      "/utils/tab-state.js",
      "/utils/appstats.js",
      "/utils/messaging.js",
      "/utils/fetch.js",
      "/utils/ratethrottle.js",
      "/utils/logging.js",
      "/utils/browser.js",
      "/gui/interface.js",
      "/gui/modal.js",
      "/gui/notification.js",
      "/gui/utils.js",
      "/utils/i18n/i18n.js",
      "/utils/trust/audit.js",
      "/utils/trust/accounttrust.js",
      "/utils/trust/devicetrust.js",
      "/utils/blacklist/blacklist.js",
      "/utils/blacklist/ignorelist.js",
      "/utils/blacklist/exceptionlist.js",
      "/utils/blacklist/ipv4range.js",
      "/utils/trust/extension/extension.js",
      "/utils/trust/extension/extension-store.js",
      "/utils/trust/extension/extension-analysis.js",
      "/utils/trust/extension/extension-trust.js",
      "/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "/utils/injected/citadel-content-script-utils.js",
        "/utils/injected/citadel-content-script-start.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "/utils/context.js",
        "/utils/session-state.js",
        "/utils/encryption/pbkdf2.js",
        "/utils/trust/passwords.js",
        "/utils/trust/mfa.js",
        "/utils/injected/citadel-content-script-idle.js"
      ],
      "run_at": "document_idle"
    }

  ],
  "action": {
    "default_title": "Click to see security report",
    "default_icon": {
      "16": "/gui/images/icon16.png",
      "48": "/gui/images/icon48.png",
      "128": "/gui/images/icon128.png"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{090510dc-b0ac-44dd-8e44-fee9b778180d}",
      "strict_min_version": "128.0"
    }
  }

}
