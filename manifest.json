{
  "manifest_version": 3,
  "name": "Citadel browser agent",
  "version": "1.0",
  "description": "Provides protection against malware and data loss by analysing and logging security events in a privacy-respecting way.",
  "permissions": [
    "webNavigation",
    "webRequest",
    "downloads",
    "storage",
    "alarms",
    "scripting",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["gui/clickcatcher.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_icon": {
      "16": "gui/images/icon16.png",
      "48": "gui/images/icon48.png",
      "128": "gui/images/icon128.png"
    }
  }
}
